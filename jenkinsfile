// JenkinsFile
pipeline {
     agent any
     stages {
        stage("Build") {
            steps {
                sh "node --version"
                sh "npm --version"
                sh "sudo npm install -g yarn"
                sh "yarn --version"
                sh "yarn install"
                sh "sudo yarn build"
            }
        }
        stage("Deploy") {
            steps {
                script {
                    sh 'sudo chmod +x ./script/deploy.sh'
                    sh 'sudo ./script/deploy.sh'
                }
            }
        }
    }
}